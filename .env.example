# Environment Variables for MCP Code Mode

# ============================================
# Host Projects Path (동적 설정 - 필수!)
# ============================================
# 로컬 머신의 프로젝트 디렉토리 경로를 지정하세요
# 이 경로는 Docker 컨테이너 내부의 /projects로 마운트됩니다
#
# 중요:
# - 클라이언트(VSCode Copilot)가 전달하는 경로는 이 HOST_PROJECTS_PATH를 기준으로 합니다
# - 예: HOST_PROJECTS_PATH=D:/01.Work/01.Projects인 경우
#   클라이언트: D:/01.Work/01.Projects/myapp/file.ts
#   컨테이너: /projects/myapp/file.ts (자동 변환됨)
#
# Windows 예시: D:/01.Work/01.Projects
# Linux 예시: /home/user/projects
# Mac 예시: /Users/username/projects
HOST_PROJECTS_PATH=D:/01.Work/01.Projects

# ============================================
# Container Internal Paths (변경 불필요)
# ============================================
PROJECTS_PATH=/projects
BESTCASE_STORAGE_PATH=/projects/.bestcases

# ============================================
# Example Project Path (예제 및 테스트용)
# ============================================
# 예제 코드와 문서에서 사용할 프로젝트 경로
# Docker 환경에서는 /projects/<프로젝트명> 형식
# 실제 사용할 프로젝트 경로로 변경하세요
EXAMPLE_PROJECT_PATH=/projects/49.airian/frontend-admin

# ============================================
# Node Environment
# ============================================
NODE_ENV=production

# ============================================
# Logging Configuration
# ============================================
# Enable/disable error logging
LOG_ERRORS=true

# ============================================
# Ollama LLM Settings
# ============================================
OLLAMA_URL=http://ollama:11434
OLLAMA_HOST=http://ollama:11434
OLLAMA_MAX_LOADED_MODELS=1
OLLAMA_NUM_PARALLEL=3
LLM_PROVIDER=ollama
LLM_MODEL=qwen2.5-coder:7b
OLLAMA_MODEL=qwen2.5-coder:7b

# ============================================
# AI Analysis Concurrency
# ============================================
CONCURRENCY=2

# ============================================
# RAG Embedding Settings
# ============================================
# 임베딩 모델 (Ollama에서 사용)
EMBEDDING_MODEL=nomic-embed-text
# 임베딩 생성 여부 (true/false)
GENERATE_EMBEDDINGS=true

# ============================================
# BestCase Validation & Migration Settings
# ============================================
# 파일 보존 기간 (일 단위, 0이면 무제한)
BESTCASE_RETENTION_DAYS=90
# 검증 생략 여부 (true/false)
SKIP_BESTCASE_VALIDATION=false
# 삭제 전 백업 여부 (true/false)
BESTCASE_BACKUP_ON_VALIDATE=false
# 구 버전 자동 마이그레이션 (true/false)
BESTCASE_MIGRATE_OLD_FORMAT=true

# ============================================
# Design System Configuration
# ============================================
# 감지할 디자인 시스템 목록 (쉼표로 구분)
# 지원: openerd-nuxt3, element-plus, vuetify, quasar, primevue, ant-design-vue, naive-ui
DESIGN_SYSTEMS=openerd-nuxt3,element-plus,vuetify,quasar,primevue

# ============================================
# Utility Library Configuration
# ============================================
# 감지할 유틸리티 라이브러리 목록 (쉼표로 구분)
# 순수 유틸: vueuse, lodash, date-fns, axios, dayjs
# 하이브리드 (컴포넌트+유틸): openerd-nuxt3, element-plus, vuetify, quasar
UTILITY_LIBRARIES=vueuse,lodash,date-fns,axios,dayjs,openerd-nuxt3,element-plus,vuetify,quasar

# ============================================
# Local Package Analysis Settings
# ============================================
# 분석 모드: unanalyzed (미분석만), all (전체), force (강제 재분석)
LOCAL_PACKAGE_ANALYSIS_MODE=unanalyzed

# Git 인증 정보 (Private 저장소 접근 시 필요)
GIT_USERNAME=
GIT_PASSWORD=
GIT_TOKEN=
