{
  "name": "mcp-code-mode-starter",
  "version": "1.0.0",
  "description": "Production-Ready Code Mode MCP Server - TypeScript sandbox execution with 98% token reduction, AI-powered code analysis, and automated BestCase management",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.9.1",
  "author": "TaeGyumKim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TaeGyumKim/mcp-code-mode.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "code-mode",
    "typescript",
    "sandbox",
    "vm2",
    "token-optimization",
    "ai-analysis",
    "ollama",
    "gpu",
    "bestcase-management",
    "code-quality",
    "project-scanner",
    "nuxt3",
    "docker"
  ],
  "workspaces": [
    "apps/*",
    "packages/*",
    "mcp-servers/*",
    "scripts"
  ],
  "scripts": {
    "dev": "yarn workspace web run dev",
    "build:all": "yarn workspace bestcase-db run build && yarn workspace llm-analyzer run build && yarn workspace @mcp-code-mode/guides run build && yarn workspace ai-bindings run build && yarn workspace ai-runner run build && yarn workspace mcp-scripts run build",
    "build:root": "tsup mcp-stdio-server.ts --format esm --clean --no-dts --external vm2 --external vm --shims",
    "scan": "tsx scripts/scan/scan-files-ai.ts",
    "scan:migrate": "tsx scripts/scan/migrate-bestcases.ts",
    "scan:migrate:dry": "tsx scripts/scan/migrate-bestcases.ts --dry-run",
    "scan:validate": "tsx scripts/scan/validate-bestcases.ts",
    "analyze:entities": "tsx scripts/test/analyze-entities.ts",
    "preflight": "tsx scripts/test/preflight-check.ts",
    "ci:validate-docs": "tsx scripts/ci/validate-docs-links.ts",
    "test:guides": "tsx scripts/test/test-guides-integration.ts",
    "test:yaml": "tsx scripts/test/test-yaml-parser.ts",
    "test:flow": "tsx scripts/test/test-mcp-server-flow.ts",
    "test:metadata": "tsx scripts/test/test-metadata-analyzer.ts",
    "test:design-system": "tsx scripts/test/test-design-system-integration.ts",
    "test:import": "tsx scripts/test/test-import-support.ts",
    "test:require": "tsx scripts/test/test-require-support.ts",
    "test:iife": "tsx scripts/test/test-iife-unwrap.ts",
    "ollama:init": "powershell -ExecutionPolicy Bypass -File ./init-ollama.ps1",
    "ollama:test": "docker exec ollama-code-analyzer ollama list",
    "docker:up": "docker-compose -f docker-compose.ai.yml up -d",
    "docker:down": "docker-compose -f docker-compose.ai.yml down",
    "docker:logs": "docker-compose -f docker-compose.ai.yml logs -f",
    "docker:build": "docker-compose -f docker-compose.ai.yml build"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "esbuild": "^0.25.12",
    "tsup": "^8.5.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  }
}
