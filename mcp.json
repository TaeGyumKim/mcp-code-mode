{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "MCP Code Mode configuration file - Place this as 'mcp.json' in your project root",

  "projectMarkers": [
    "modules",
    "features",
    "domains"
  ],

  "dimensionFloors": {
    "performance": 60,
    "errorHandling": 70,
    "typeUsage": 65,
    "apiConnection": 60
  },

  "cacheOptions": {
    "ttlMs": 600000,
    "maxEntries": 200
  },

  "autoRecommendDefaults": {
    "maxBestPractices": 5,
    "maxGuides": 10,
    "maxGuideLength": 50000,
    "enableDynamicThreshold": true,
    "includeMetadata": false,
    "customKeywords": {
      "apiConnection": ["rest-api", "axios-client", "grpc-service"],
      "performance": ["cache", "lazy-load", "virtual-scroll"],
      "errorHandling": ["try-catch", "error-boundary", "validation"]
    }
  },

  "bestPracticeSearch": {
    "defaultThreshold": 75,
    "minFloor": 50,
    "maxResults": 5,
    "maxImportantDimensions": 3,
    "dynamicThresholds": {
      "enabled": true,
      "multiplier": 1.1,
      "bonus": 10
    },
    "fallbackPercentile": 0.1
  },

  "ragRecommendation": {
    "maxRecommendations": 10,
    "hybridWeights": {
      "vector": 0.7,
      "keyword": 0.3
    }
  },

  "sandbox": {
    "timeoutMs": 30000
  }
}
